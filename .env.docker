# Docker Environment Configuration for TechzuPOS
# This file contains Docker-specific environment variables

# Database Configuration (Docker internal networking)
DATABASE_URL=postgresql://techzu_user:techzu_pass@postgres:5432/techzu_pos
DB_HOST=postgres
DB_PORT=5432
DB_NAME=techzu_pos
DB_USER=techzu_user
DB_PASS=techzu_pass

# JWT Configuration
JWT_SECRET=docker_dev_jwt_secret_change_in_production
JWT_EXPIRES_IN=24h

# API Configuration
API_PORT=3001
NODE_ENV=development

# Web Configuration  
WEB_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:3001

# POS App Configuration (Docker host accessible)
EXPO_PUBLIC_API_URL=http://localhost:3001

# Expo Development Configuration
EXPO_DEVTOOLS_LISTEN_ADDRESS=0.0.0.0

# Hot Reloading Configuration
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true

# Development flags
TURBO_TELEMETRY_DISABLED=1